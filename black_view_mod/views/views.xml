<odoo>
  <data>
    <!-- explicit list view definition -->


    <record id="inherit_view_id_inherit_work_name" model="ir.ui.view">
      <field name="name">model.name.view.form.inherit</field>
      <field name="model">mrp.workorder</field>
      <field name="inherit_id" ref="mrp_workorder.mrp_workorder_view_form_tablet"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='lot_id']" position = "before">
          <field name="package_id" groups="stock.group_tracking_lot"/>
          <field name="location_id" invisible="1"/>
		    </xpath>
        <xpath expr="//div[hasclass('o_workorder_field')]" position="inside"> 
          <label for="package_id" string="--  Paquete Fuente"/>
          <field name="package_id" string="Paquete Fuente" class="text-center o_lot_number" groups="stock.group_tracking_lot"  domain="[('location_id', '=', location_id)]"/>
          <field name="location_id" invisible="1"/>
        </xpath>


        <!--field name="finished_lot_id" position="attributes">
          <attribute name="domain">('product_id', '=', product_id),('qty_done', '=>', 0)</attribute>
        </field-->
      </field>
    </record>



   
  </data>
</odoo>
